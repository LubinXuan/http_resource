<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd"
       default-lazy-init="true">
    <!-- HttpClient Config -->
    <bean id="config" class="com.adtime.http.resource.CrawlConfig">
        <property name="userAgentString" value="${http.user.agent}"/>
        <property name="connectionTimeout" value="${http.connect.timeout}"/>
        <property name="socketTimeout" value="${http.socket.timeout}"/>
        <property name="followRedirects" value="${http.auto.redirect}"/>
        <property name="includeHttpsPages" value="${http.https.enable}"/>
        <property name="maxConnectionsPerHost" value="${http.maxConnectionsPerHost}"/>
        <property name="maxTotalConnections" value="${http.maxTotalConnections}"/>
        <property name="retryCount" value="3"/>
    </bean>

    <bean id="invalidUrl" class="com.adtime.http.resource.url.invalid.DefaultInvalidUrl" lazy-init="false">
        <constructor-arg value="${invalid.url.config}"/>
    </bean>

    <bean id="formatUrl" class="com.adtime.http.resource.url.format.DefaultUrlFormat" lazy-init="false">
        <constructor-arg name="sourceFile" value="${format.url.config}"/>
    </bean>

